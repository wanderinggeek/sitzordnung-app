                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Name="platz1Bild" Grid.Row="0"></Image>
            <Label Name="platz1Name" Grid.Row="1" FontWeight="ExtraBold"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Calibri">
                <TextBlock Text="{Binding platz1NameText}" Name="platz1NameTB" TextTrimming="WordEllipsis"></TextBlock>
            </Label>
            <Label Name="platz1Firma" Grid.Row="2" FontWeight="ExtraBold"  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Calibri"  Margin="0,-10,0,0">
